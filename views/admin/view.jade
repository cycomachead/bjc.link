extends ../layouts/layout.jade

- var title = `view | ${options.APP_NAME}`

block content
  //- Remove the ms from the end of time stamps
  div.container-fluid
    h1 #{key} info
    div.table-responsive.redirects-table
      table.table.table-striped
        thead.thead-default
          tr
            th Key
            th URL
            th Clicks
            th Created At
        tbody
          tr
            td
              =key
            td
              =url
            td
              =count
            td
              =created_at
    
    div
      each visit in visits
        p
          =visit
    div#chart(style="height: 300px")
    script(src="/assets/js/Chart.bundle.min.js")
    script(src="/assets/js/chartkick.js")
    script(type='text/javascript').
      window.onload = function () {
         new Chartkick.LineChart("chart", location.pathname + "/visits")
      }