{
  "name": "bjc.link",
  "description": "A Simple, Lightweight URL Redirector.",
  "website": "https://github.com/cycomachead/bjc.link",
  "repository": "https://github.com/cycomachead/bjc.link",
  "logo": "https://bjc.berkeley.edu/bjc.png",
  "success_url": "/admin",
  "keywords": [
    "node",
    "express",
    "redirect",
    "url-shortener"
    "redis"
  ],
  "env": {
    "APP_NAME": {
        "description": "Your name for the app, such as redisred."
    },
    "ADMIN_EMAIL"
      "description": "Google address of one admin."
    },
    "API_TOKEN": {
      "description": "The token to be used on all API calls"
    },
    "DOMAIN": {
      "description": "The URL the site will be hosted from."
    },
    "GOOGLE_ANALYTICS_ID": {
      "description": "A GA app id."
    },
    "GOOGLE_CLIENT_ID": {
      "description": "Google OAuth Client ID."
    },
    "GOOGLE_CLIENT_SECRET": {
      "description": "Google OAuth Client Secret."
    },
    "ROOT_REDIRECT": {
      "description": "The URL the root of your website should redirect to."
    },
    "SESSION_SECRET": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    }
  },
  "addons": [
    "heroku-redis"
  ]
}
